<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".login_view.Login_settings_activity">

    <ImageView
        android:id="@+id/backgroundPassword4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/background" />

    <ImageView
        android:id="@+id/blackBackgroundPassword4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha=".60"
        app:srcCompat="@android:color/black" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context=".login_view.Login_settings_activity">

            <ImageView
                android:id="@+id/whiteBackgroundPassword3"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/white" />

            <ImageButton
                android:id="@+id/backButtonLoginSettings"
                style="@android:style/Widget.Material.ImageButton"
                android:layout_width="47dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/serverURL"
                app:layout_constraintBottom_toTopOf="@+id/serverURL"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3" />

            <EditText
                android:id="@+id/serverURL"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="@string/serverURL"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/saveTheURL"
                app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3" />

            <Switch
                android:id="@+id/saveTheUserName"
                android:layout_width="277dp"
                android:layout_height="66dp"
                android:layout_marginBottom="120dp"
                android:text="@string/showDialog"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3" />

            <Button
                android:id="@+id/saveTheURL"
                android:layout_width="223dp"
                android:layout_height="51dp"
                android:layout_marginTop="120dp"
                android:background="@color/colorAccent"
                android:text="@string/saveURL"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintTop_toTopOf="@+id/whiteBackgroundPassword3" />

            <Button
                android:id="@+id/alreadySavedNameDeleteButton"
                android:layout_width="325dp"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:text="@string/deleteAlreadySavedName"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintTop_toBottomOf="@+id/saveTheUserName" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/saveTheUserName"
                app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword3"
                app:layout_constraintTop_toBottomOf="@+id/saveTheURL"
                app:srcCompat="@android:color/darker_gray" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>