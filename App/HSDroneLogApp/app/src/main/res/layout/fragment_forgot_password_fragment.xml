<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password_fragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@mipmap/background" />

        <ImageView
            android:id="@+id/blackBackground"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha=".50"
            android:src="@android:color/black"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="48dp" />

        <ImageView
            android:id="@+id/whiteBackgroundPassword"
            android:layout_width="308dp"
            android:layout_height="440dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="61dp"
            android:layout_marginBottom="32dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/whiteBackgroundPassword"
            app:layout_constraintEnd_toEndOf="@+id/whiteBackgroundPassword"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/whiteBackgroundPassword" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>